    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.tfg.hrv.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_measure"
        android:name="com.tfg.hrv.ui.measure.MeasureFragment"
        android:label="@string/title_measure"
        tools:layout="@layout/fragment_measure" />

    <fragment
        android:id="@+id/navigation_historical"
        android:name="com.tfg.hrv.ui.historical.HistoricalFragment"
        android:label="@string/title_historical"
        tools:layout="@layout/fragment_historical" />

    <fragment
        android:id="@+id/navigation_charts"
